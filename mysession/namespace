kubectl create namespace testing
kubectl config set-context --current --namespace=testing
kubectl config get-contexts
kubectl config get-contexts
#Create a quota type resource
<#
vim testing-quota.yaml
apiVersion: v1
kind: ResourceQuota
metadata:
  name: testing
  namespace: tesing
spec:
  hard:
    requests.cpu: "0.5"
    requests.memory: 500Mi
    limits.cpu: "2"
    limits.memory: 2Gi
    count/deployments.apps: 1
#>
kubectl get quota -n testing
kubectl apply -f testing-quota.yaml
kubectl get quota -n testing
kubectl describe quota
kubectl apply -f nginx-testing.yaml
